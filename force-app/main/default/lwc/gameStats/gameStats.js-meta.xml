<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>65.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Game Stats</masterLabel>
    <description>Displays player statistics including games played, win rate, achievements, and recent activity</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
        <target>lightningCommunity__Page</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__HomePage,lightning__RecordPage">
            <property name="playerId" type="String" label="Player ID" />
            <property name="playerName" type="String" label="Player Name" default="Current Player" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>