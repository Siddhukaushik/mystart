<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>65.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Game Leaderboard</masterLabel>
    <description>Displays player rankings, scores, and statistics for games</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
        <target>lightningCommunity__Page</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__HomePage,lightning__RecordPage">
            <property name="gameName" type="String" label="Game Name" default="All Games" />
            <property name="gameId" type="String" label="Game ID" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
